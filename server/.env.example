## Exemplo de arquivo de variáveis de ambiente
# Porta em que o servidor Node.js será executado
PORT=4000

# Configurações de acesso ao banco MySQL
DB_HOST=localhost
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=ponto_mvp
DB_PORT=3306

# Chave secreta para geração de tokens JWT
JWT_SECRET=uma_chave_super_secreta

# Parâmetros de geolocalização da sede (para validação de geofence)
# Informe a latitude e longitude aproximadas da empresa e o raio de tolerância em metros
GEOFENCE_LAT=-23.55052
GEOFENCE_LON=-46.633308
GEOFENCE_RADIUS=150